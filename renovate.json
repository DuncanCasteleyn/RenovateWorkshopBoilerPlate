{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "assignees": [
    "DuncanCasteleyn"
  ],
  "prConcurrentLimit": 3,
  "schedule": [
    "after 11pm and before 2am every weekday",
    "every weekend"
  ],
  "timezone": "Europe/Brussels",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr-comment"
    }
  ]
}
